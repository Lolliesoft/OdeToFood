<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @RenderBody()
    </div>
    <div>
        @DateTime.Now.Year
        @DateTime.Now.Month
        @DateTime.Now.Day
        @DateTime.Now.DayOfWeek
    </div>
    <footer>
        @RenderSection("footer", required:false)
    </footer>
</body>
</html>
